{
  "variables": {
    "iso_md5_checksum": "{{env `RANCHEROS_ISO_MD5_CHECKSUM`}}",
    "version_prerelease_suffix": "",
    "vm_description": "RancherOS with SaltStack as container",
    "vm_version": "{{env `RANCHEROS_VERSION`}}"
  },
  "builders": [
    {
      "type": "virtualbox-iso",
      "guest_os_type": "Linux26_64",
      "iso_url": "https://github.com/rancherio/os/releases/download/v{{user `vm_version`}}/rancheros.iso",
      "iso_checksum": "{{user `iso_md5_checksum`}}",
      "iso_checksum_type": "md5",
      "guest_additions_mode": "disable",
      "ssh_private_key_file": "./keys/vagrant",
      "ssh_username": "rancher",
      "ssh_wait_timeout": "10s",
      "hard_drive_interface": "sata",
      "hard_drive_nonrotational": true,
      "iso_interface": "sata",
      "vm_name": "rancherOS",
      "disk_size": "24000",
      "boot_wait": "30s",
      "boot_command": [
        "mkdir ~/.ssh/<enter>",
        "echo 'ssh-rsa  vagrant insecure public key' > ~/.ssh/authorized_keys<enter>",
        "chmod -R 700 ~/.ssh/<enter>"
      ],
      "shutdown_command": "sudo shutdown -H now",
      "export_opts": [
        "--manifest",
        "--vsys", "0",
        "--description", "{{user `vm_description`}}",
        "--version", "{{user `vm_version`}}{{user `version_prerelease_suffix` }}"
      ],
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "1024"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "1"
        ]
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "script": "install2disk.sh",
      "expect_disconnect": true,
      "only": ["virtualbox-iso"]
    },
    {
      "type": "shell",
      "script": "check-salt-minion.sh",
      "only": ["virtualbox-iso"]
    }
  ],
  "post-processors": [
    [
      {
        "type": "vagrant",
        "compression_level": 9,
        "keep_input_artifact": false,
        "output":"RancherOS_{{user `vm_version`}}.box",
        "vagrantfile_template": "./Vagrantfile"
      },
      {
        "type": "atlas",
        "only": ["virtualbox-iso"],
        "artifact": "MatthewHartstonge/RancherOS",
        "artifact_type": "vagrant.box",
        "metadata": {
          "provider": "virtualbox",
          "version": "{{user `vm_version`}}{{user `version_prerelease_suffix`}}"
        }
      }
    ]
  ],
  "push": {
    "name": "MatthewHartstonge/RancherOS"
  }
}
